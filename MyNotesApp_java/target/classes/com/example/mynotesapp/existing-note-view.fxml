<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="30.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mynotesapp.NoteEditorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextArea fx:id="textInput" onMouseClicked="#pushTextFromFile" prefHeight="712.0" prefWidth="1245.0" promptText="To view your note click here">
      <font>
         <Font name="Cambria" size="18.0" />
      </font></TextArea>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="btn_1" defaultButton="true" layoutX="535.0" layoutY="17.0" mnemonicParsing="false" onAction="#savingTextFromArea" text="Save" textAlignment="CENTER" userData="1">
            <font>
               <Font name="Cambria" size="18.0" />
            </font></Button>
            <Button fx:id="btn_2" defaultButton="true" layoutX="535.0" layoutY="17.0" mnemonicParsing="false" onAction="#closeTheStage" text="Close" textAlignment="CENTER">
            <font>
               <Font name="Cambria" size="18.0" />
            </font></Button>
        </buttons>
    </ButtonBar>
</VBox>
